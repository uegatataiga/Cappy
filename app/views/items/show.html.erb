<div class='container'>
 <h1>商品詳細</h1>
  <div class='row'>

 <div class='col-md-12'>
<table class="table">
  <tr>
  <td>商品名</td>
  <td><%= @item.name %></td>
  </tr>
  <tr>
  <td>商品説明</td>
  <td><%= @item.introduction %></td>
  </tr>
  <tr>
  <td>レビュー</td>
  <td><%= render "static_rate", item: @item %></td>
  </tr>
  <td><%= @item.created_at.strftime('%Y/%m/%d') %></td>
  <td>
   <% if @item.images.attached? %>
    <% @item.images.each do |image| %>
     <%= image_tag image.variant(resize: '500x500') %>
     <% end %>
   <% end %>
  </td>

  <% if @item.video.attached? %>
  <td><video src="<%#= rails_blob_path(@item.video) %>" type="video/mp4" controls></video></td>
  <% end %>
<td>コメント件数:<span id="comment_counter"><%= @item.comments.count %></span></td>

 <td id="comments">
  <%= render 'comments/show', item: @item, comments: @comment %>
 </td>

 <td id="comment-form">
 <%= render 'comments/form', item: @item, comments: @comment %>
 </td>
</table>
</div>
</div>
</div>
<div class='text-center'>
<%= link_to "編集する", edit_item_path, class: 'btn btn-success' %>
</div>
