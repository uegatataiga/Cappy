<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <%= render 'varidation', item: @item %>
     <h2>商品編集</h2>

      <%= form_with model:@item, local:true do |f| %>
       <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
       </div>

       <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
       </div>

        <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
       </div>

　　　 <% if @item.id.nil? %>
       <div class="form-group" id="star">
        <%= f.label :star %>
        <%= f.hidden_field :star, id: :review_star, class: 'form-control' %>
        <div id="post_raty"></div>
       </div>
        <script>
          $(document).on('turbolinks:load', function() {
           let elem = document.querySelector('#post_raty');
            if (elem == null) return;
            elem.innerHTML = ""
            let opt = {
            starOn: "<%= asset_path('star-on.png') %>",
            starOff: "<%= asset_path('star-off.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            scoreName: 'book[star]',
            };
           raty(elem, opt);
          });
        </script>

        <div class="form-group">
         <%= render "static_rate", item: @item %>
        </div>
        <% end %>


       <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :images, class: "form-control-file image", accept: 'image/*', multiple: true %>
       </div>

       <div class="form-group">
        <%= f.label :video %>
        <%= f.file_field :video, class: "form-control-file video", accept: 'video/*' %>
       </div>

       <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
       </div>
      <% end %>

    </div>
  </div>
</div>

