<table class='table table-hover table-inverse'>

  <%= link_to '新しい順', items_path(latest: "true") %>
 |<%= link_to '古い順', items_path(old: "true") %>
 |<%= link_to 'いいねの多い順', items_path(favorites_count: "true") %>
 |<%= link_to '評価の高い順', items_path(star_count: "true") %>


  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Introduction</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item.each do |item| %>
      <tr>
        <td><%= link_to(item) do %>
          <%= image_tag item.get_images[0], size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to item.name,item %></td>
        <td><%= item.introduction %></td>
        <td><%= item.created_at.strftime('%Y/%m/%d') %></td>
        <td id="favorite<%= item.id %>" >
        <%= render 'favorites/favorite', item: item %>
        </td>
        <td>コメント件数:<span id="comment_count"><%= item.comments.count %></span></td>
        <td><%= render "static_rate", item: item  %></td>
    <% end %>
  </tbody>
</table>