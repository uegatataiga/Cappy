  <div class="sidebar col-md-12 shadow">
    <div>
      <%= link_to notifications_path, class: 'nav-link text-dark' do %>
        <i class="fa-sharp fa-solid fa-bell"></i> 通知一覧
      <% end %>
    </div>

    <div>
     <%= link_to users_mypage_path(current_user),class: 'nav-link text-dark' do %>
       <i class="fas fa-home"></i> マイページ
     <% end %>
    </div>

    <div>
     <%= link_to users_path,class: 'nav-link text-dark' do %>
       <i class="fas fa-users"></i> ユーザー一覧
     <% end %>
    </div>

    <div>
     <%=  link_to items_path ,class: 'nav-link text-dark' do %>
       <i class="fas fa-cat"></i> 投稿一覧
     <% end %>
    </div>

    <div>
     <%=  link_to items_search_path ,class: 'nav-link text-dark' do %>
       <i class="fas fa-book-open"></i> 新規投稿
     <% end %>
    </div>

    <div>
      <%= render "genresearches/genre" %>
    </div>
  </div>

  <div class="mt-2">
    <div class="sidebar shadow col-md-12 text-left">
    <h6 class="text-dark">&emsp;新着リスト</h6>
      <table class="table-striped sidetable" >
        <tbody>
          <% @newitem.each do |item| %>
          <tr>
            <td>・<%= link_to item.name,item_path(item), class: 'text-dark' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>



