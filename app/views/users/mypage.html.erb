<div class="container mt-3">
  <div class="row">
   <h3 class="fas fa-home  col-md-7 text-secondary">マイページ</h3>
　 <div class="mypage shadow col-md-7">
　  <div class="tabs">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link active text-dark" data-toggle="tab" href="#section1">my情報</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-dark" data-toggle="tab" href="#section2">my投稿</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-dark" data-toggle="tab" href="#section3">いいね一覧</a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="section1" class="tab-pane fade show active">
     <table class="table table-striped">

      <tr>
     <%= image_tag @user.get_profile_image, class: "rounded-circle", size: '64x64' %>
      </tr>

      <tr>
       <td>氏名</td>
       <td><%= @user.name %></td>
      </tr>

      <tr>
       <td>一言</td>
       <td><%= @user.introduction %></td>
      </tr>

      <tr>
        <td>メールアドレス</td>
        <td><%= @user.email %></td>
      </tr>

      <tr>
       <td>フォロー</td>
       <td class="text-dark">
        <%= link_to follows_user_path(@user), class: 'text-dark' do %>
        <%= @user.followers.count %>
        <% end %>
       </td>
      </tr>

      <tr>
       <td>フォロワー</td>
       <td>
        <%= link_to followers_user_path(@user), class: 'text-dark' do %>
        <%= @user.followeds.count %>
        <% end %>
       </td>
      </tr>

      <tr>
       <td>会員ステータス</td>
       <td><% if @user.is_deleted == false %>
        有効
        <% else %>
        退会
        <% end %></td>
      </tr>
     </table>

    <div class="compile text-center">
     <%= link_to "編集する", edit_user_path(@user), class: 'btn btn--orange btn--radius'%>
    </div>
    </div>

    <div id="section2" class="tab-pane fade show list">

    <table class="table table-striped">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Tag</th>
       <th colspan="3"></th>
      </tr>
     </thead>

     <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= link_to(item.user) do %>
          <%= image_tag item.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to item.name,item, class: 'text-dark' %></td>
        <td id="favorite<%= item.id %>" >
        <%= render 'favorites/favorite', item: item %>
        </td>
        <td>コメント件数:<span id="comment_count"><%= item.comments.count %></span></td>
        <td><%= render "items/static_rate", item: item %></td>
      <% end %>
     </tbody>
    </table>
   </div>

   <div id="section3" class="tab-pane fade show list">
    <%= render "favorites",favorite_items: @favorite_items %>
   </div>


   </div>
  </div>
</div>
</div>
</div>