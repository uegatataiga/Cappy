<div class="container">
  <div class = "row">
    <div class = "col-lg-8 mx-auto">
      <table class="table table-striped">

       <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
        </tr>
       </thead>

       <tbody>
         <% @users.each do |user| %>
        <tr>
         <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
         <td><%= user.name %></td>
         <td>フォロー<%= user.followers.count %></td>
         <td>フォロワー<%= user.followeds.count %></td>
         <td><%= link_to 'Show', user ,class: 'btn btn--orange btn--circle btn--circle-a btn--shadow'%></td>
        </tr>
        <% end %>
       </tbody>

      </table>
    </div>
  </div>
</div>