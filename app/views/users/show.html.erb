<div class="container mt-3">
  <div class="row">
   <h3 class="fas fa-home  col-md-7 text-secondary">ユーザー詳細</h3>
　 <div class="mypage shadow col-md-7">
　  <div class="tabs">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link active text-dark" data-toggle="tab" href="#section1">ユーザー情報</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-dark" data-toggle="tab" href="#section2">ユーザー投稿</a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="section1" class="tab-pane fade show active">
     <table class="table table-striped">

      <tr>
        <%= image_tag @user.get_profile_image, class: "rounded-circle", size: '50x50' %>
      </tr>

      <tr>
       <td>氏名</td>
       <td><%= @user.name %></td>
      </tr>

      <tr>
       <td>一言</td>
       <td><%= @user.introduction %></td>
      </tr>

      <tr>
       <td>フォロー</td>
       <td>
        <%= link_to follows_user_path(@user), class: 'text-dark' do %>
        <%= @user.followers.count %>
        <% end %>
       </td>
      </tr>

      <tr>
       <td>フォロワー</td>
       <td>
        <%= link_to followers_user_path(@user), class: 'text-dark' do %>
        <%= @user.followeds.count %>
        <% end %>
       </td>
      </tr>

      <tr>
       <td>会員ステータス</td>
       <td><% if @user.is_deleted == false %>
        有効
        <% else %>
        退会
        <% end %></td>
      </tr>

      <tr>
        <% if current_user != @user %>
        <% if current_user.following?(@user) %>
        <td><%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger" %></td>
        <% else %>
        <td><%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "byn btn-success" %></td>
        <% end %>
        <% end %>
      </tr>
     </table>

      <% if user_signed_in? %>
  　　　<% if current_user.admin? %>

      <%= form_with model: @user, url:user_path(@user), method: :patch, local: true do |f| %>
  <div class="form-group status text-center">
  <%= f.label :会員ステータス %>
  <%= f.radio_button :is_deleted, :false %>
  <%= f.label :is_deleted, "有効" %>
  <%= f.radio_button :is_deleted, :true %>
  <%= f.label :is_deleted, "退会" %>
  <%= f.submit "変更を保存", class: 'btn btn-success' %>
  </div>
  <% end %>

      <% end %>
      <% end %>
  </div>

   <div id="section2" class="tab-pane fade show list">
    <table class='table table-striped'>
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Tag</th>
       <th colspan="3"></th>
      </tr>
     </thead>

     <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= link_to(item.user) do %>
          <%= image_tag item.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to item.name,item %></td>
        <td id="favorite<%= item.id %>" >
        <%= render 'favorites/favorite', item: item %>
        </td>
        <td>コメント件数:<span id="comment_count"><%= item.comments.count %></span></td>
        <td><%= render "items/static_rate", item: item %></td>
      <% end %>
     </tbody>
    </table>
   </div>
</div>
</div>
</div>
</div>
</div>



