<div class="container">
  <div class = "row">

    <div class = "col-lg-6">
     <table class="table">

      <tr>
       <td><%= image_tag @user.get_profile_image, size: '50x50' %></td>
      </tr>

      <tr>
       <td>氏名</td>
       <td><%= @user.name %></td>
      </tr>

      <tr>
       <td>一言</td>
       <td><%= @user.introduction %></td>
      </tr>

      <tr>
       <td>フォロー</td>
       <td>
        <%= link_to follows_user_path(@user) do %>
        <%= @user.followers.count %>
        <% end %>
       </td>
      </tr>

      <tr>
       <td>フォロワー</td>
       <td>
        <%= link_to followers_user_path(@user) do %>
        <%= @user.followeds.count %>
        <% end %>
       </td>
      </tr>

      <tr>
       <td>会員ステータス</td>
       <td><% if @user.is_deleted == false %>
        有効
        <% else %>
        退会
        <% end %></td>
      </tr>

      <tr>
        <% if current_user != @user %>
        <% if current_user.following?(@user) %>
        <td><%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger" %></td>
        <% else %>
        <td><%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "byn btn-success" %></td>
        <% end %>
        <% end %>
      </tr>

      <tr>
      <% if user_signed_in? %>
  　　　<% if current_user == @user || current_user.admin? %>
      <td>
      <div class="d-flex align-items-end">
        <%= link_to "退会", users_check_path, class: "btn btn-danger ms-3" %>
      </div>
      </td>
      <% end %>
      <% end %>
      </tr>

     </table>
    </div>

    <div class = "col-lg-6">
    <table class='table table-hover table-inverse'>
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th>Tag</th>
       <th colspan="3"></th>
      </tr>
     </thead>

     <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= link_to(item.user) do %>
          <%= image_tag item.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to item.name,item %></td>
        <td><%= item.introduction %></td>


        <td id="favorite<%= item.id %>" >
        <%= render 'favorites/favorite', item: item %>
        </td>
        <td>コメント件数:<span id="comment_count"><%= item.comments.count %></span></td>
        <td><%= render "items/static_rate", item: item %></td>
      <% end %>
     </tbody>
    </table>
   </div>

  </div>
</div>

