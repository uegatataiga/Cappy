<div class='container mt-3'>
  <div class='row'>
   <h3 class="fas fa-bell col-md-7 text-secondary">通知</h3>
    <div class="edit shadow col-md-7">
    <% if @notifications.present? %>
      <%= link_to "全削除",notification_path(@notifications), method: :delete,class: "btn btn-outline-secondary" %>
      <table class="table table-striped">

       <tbody>
        <% @notifications.each do |notification| %>
        <tr>
          <td><%= render "#{notification.action_type}", notification: notification %></td>
        <% end %>
        </tr>
       </tbody>

      </table>
    <% else %>
    通知はありません
    <% end %>

    <%= paginate @notifications %>
    </div>
  </div>
</div>