<div class='col-md-8'>
 <h4>Bookcomments</h4>
  <table class='table'>

   <tbody>
    <% items.comments.each do |comment| %>

    <tr>
     <td><%= image_tag comment.user.get_profile_image, size:"50x50"  %></td>
     <td><%= comment.user.name %></td>
     <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
     <td><%= comment.comment %></td>
     <% if comment.user == current_user %>
     <td><%= link_to "削除", item_comment_path(item, comment), method: :delete, remote: true, data: {"turbolinks" => false} %></td>
     <% end %>
    </tr>

    <% end %>
   </tbody>

  </table>
</div>
